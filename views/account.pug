block content
    .user-view-container
        .user-view
            .user-view__menu
                p.setting Settings
                ul.header-nav__list
                    li.header-nav__list-item
                        a.nav__link(href='') ACCOUNT
                    li.header-nav__list-item
                        a.nav__link(href='') NOTIFICATIONS
                    li.header-nav__list-item
                        a.nav__link(href='') PASSWORD
                    li.header-nav__list-item
                        a.nav__link(href='') MY REVIEWS
                //- p.admin ADMIN
                //- ul.header-nav__list
